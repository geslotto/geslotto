<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="TooDeepLayout" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/cabecera" >

        <TextView
            android:id="@+id/Titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="@string/titulo"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btnCrearEvento"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:background="@anim/anim_boton_pequeno"
            android:drawableLeft="@drawable/ic_menu_btn_add"
            android:text="@string/txtCrearEvento"
            android:textColor="@android:color/background_light"
            android:textSize="12sp" />
    </RelativeLayout>

    <TabHost
        android:id="@+id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#396b9e" >
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ddd" >

                <LinearLayout
                    android:id="@+id/tab1Layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_recoger"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@anim/anim_boton"
                        android:contentDescription="@string/action_settings"
                        android:drawableRight="@android:drawable/arrow_down_float"
                        android:text="@string/txtFiltro"
                        android:textColor="#fff"
                        android:textSize="12sp" />

                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:cacheColorHint="@android:color/transparent"
                        android:divider="@android:color/transparent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" >

                        <LinearLayout
                            android:id="@+id/linear_filtro"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="10dp" >

                                <EditText
                                    android:id="@+id/campoFiltro"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/txtfiltro"
                                    android:background="@drawable/campo"
                                    android:ems="10"
                                    android:hint="@string/hint_filtro"
                                    android:inputType="text"
                                    android:lines="1"
                                    android:maxLength="30" />

                                <TextView
                                    android:id="@+id/txtfiltro"
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="@string/txtFiltro" />
                            </RelativeLayout>

                            <TableLayout
                                android:id="@+id/table_filtro"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:stretchColumns="1" >

                                <TableRow
                                    android:id="@+id/tb_fil_Row1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:ignore="UselessParent" >

                                    <TextView
                                        android:id="@+id/txtfecha"
                                        android:layout_width="50dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:text="@string/txtFecha" />

                                    <EditText
                                        android:id="@+id/campoFecha"
                                        android:layout_width="120dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:background="@drawable/campo"
                                        android:ems="10"
                                        android:enabled="false"
                                        android:hint="@string/hint_fecha"
                                        android:inputType="date"
                                        android:maxLength="10"
                                        android:maxLines="1"
                                        android:maxWidth="300dp" >
                                    </EditText>

                                    <Button
                                        android:id="@+id/btnFecha"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="5dp"
                                        android:background="@android:drawable/ic_menu_today" />
                                </TableRow>
                            </TableLayout>

                            <Spinner
                                android:id="@+id/spiCategorias"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:background="@anim/anim_boton"
                                android:prompt="@string/Categorias" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right" >

                                <Button
                                    android:id="@+id/btnBuscar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_toRightOf="@+id/btnLimpiar"
                                    android:background="@anim/anim_boton"
                                    android:drawableLeft="@android:drawable/ic_menu_search"
                                    android:text="@string/txtBuscar"
                                    android:textColor="@android:color/background_light" />

                                <ImageButton
                                    android:id="@+id/btnLimpiar"
                                    android:layout_width="46dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@anim/anim_boton"
                                    android:contentDescription="@string/descImagen"
                                    android:src="@android:drawable/ic_menu_delete" />
                            </RelativeLayout>
                        </LinearLayout>
                    </ScrollView>

                    <ListView
                        android:id="@+id/gridResultados"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/transparent"
                        android:cacheColorHint="@android:color/transparent"
                        android:divider="@android:color/transparent"
                        android:gravity="center" >
                    </ListView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2Layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TableLayout
                        android:id="@+id/tableRadio"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:stretchColumns="0" >

                        <TableRow
                            android:id="@+id/table2Row1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <SeekBar
                                android:id="@+id/seekRadio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:progressDrawable="@anim/seekslid_progres"
                                android:thumb="@anim/seekslid" />

                            <TextView
                                android:id="@+id/txtKm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp" />

                            <Button
                                android:id="@+id/btnBuscarCerca"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:background="@anim/anim_boton"
                                android:drawableLeft="@android:drawable/ic_menu_search"
                                android:text="@string/txtBuscar"
                                android:textColor="@android:color/background_light" />
                        </TableRow>
                    </TableLayout>

                    <com.desipal.Librerias.ExpandableHeightGridView
                        android:id="@+id/gridResultadosCerca"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:numColumns="auto_fit"
                        android:stretchMode="spacingWidthUniform"
                        android:verticalSpacing="5dp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</RelativeLayout>